{% extends "FctBundle::layout.html.twig" %}
{% block content %}
    <br/>
   <center>
        <div class="text-center col-lg-4 jumbotron">
        <h2><i class="fas fa-briefcase"></i> Registro Empresa</h2>
        <hr/>
        {{form_start(form, {'action':'', 'method':'POST'})}}
        <div class="text-left">
            {% if app.session.flashbag().get('status')|length > 0 %}
                <div>
                    {% for class in app.session.flashbag().get('class') %}
                        <div class="alert {{ class }}">
                            Tienes los siguientes errores:<br>
                            {% for message in app.session.flashbag().get('status') %}
                                <ul>
                                    <li>{{ message }}</li>
                                </ul>
                            {% endfor %}
                            {{ form_errors(form.alumno) }}
                            {{ form_errors(form.profesor) }}
                            {{ form_errors(form.empresa) }}
                            {{ form_errors(form.periodo) }}
                            {{ form_errors(form.fecha) }}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
            <div class="form_row">
                {{ form_label(form.alumno) }}
                {{ form_widget(form.alumno) }}
            </div>
            <div class="form_row">
                {{ form_label(form.profesor) }}
                {{ form_widget(form.profesor) }}
            </div>
            <div class="form_row">
                {{ form_label(form.empresa) }}
                {{ form_widget(form.empresa) }}
            </div>
            <div class="form_row">
                {{ form_label(form.periodo) }}
                {{ form_widget(form.periodo) }}
            </div>
            <div class="form_row">
                {{ form_label(form.anyo) }}
                {{ form_widget(form.anyo) }}
            </div>
            <br>
                <center>{{ form_widget(form.Crear) }}</center>
                </div>
        {{form_end(form)}}
    </div>
    <div class="clearfix"></div></center>
{% endblock %}