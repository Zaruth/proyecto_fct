{% extends "FctBundle::layout.html.twig" %}

{% block content %}
    <br/>
    <center>
        <div class="text-center col-lg-4 jumbotron" style="max-width: 600px;">
            {% for class in app.session.flashbag().get('class') %}
                <div class="alert {{ class }}">
                    {% for message in app.session.flashbag().get('status') %}
                        {{ message }}
                    {% endfor %}
                </div>
            {% endfor %}
            <table class="table" align="center" style="max-width: 500px;">
                <thead>
                    <tr>
                        <th colspan="3"><h1>Listado</h1></th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="table-info">
                        <td colspan="3">
                            <div align="right" style="width: 100%">
                                <div style="width: 210px;">
                                    <form class="form-inline">
                                        <label class="mr-sm-2 text-dark font-weight-bold">NÂº de entradas:</label>
                                        <select class="form-control mb-2 mr-sm-2 mb-sm-0" onchange="window.location.href = '{{path("listado_prof")}}/' + {{num_pag}} + '/' + $(this).val();">
                                            <option value="5" {% if per_pag == 5%}selected="selected"{% endif %}>5</option>
                                            <option value="10" {% if per_pag == 10%}selected="selected"{% endif %}>10</option>
                                            <option value="15" {% if per_pag == 15%}selected="selected"{% endif %}>15</option>
                                            <option value="20" {% if per_pag == 20%}selected="selected"{% endif %}>20</option>
                                        </select> 
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {% for profesor in usuarios %}
                        <tr>
                            <th scope="row">{{profesor.nif}}</th>
                            <td style="text-align: left"><a href="{{path("perfil")}}/{{profesor.nif}}">{{ profesor.nombre }} {{ profesor.ape1 }} {{ profesor.ape2 }}</a></td>
                            {% if profesor.img == null %}
                                <td style="text-align: left;"><img src="{{ asset('img/data/default_prof.png')}}" style="width: 32px;height: 32px;"> <button onclick="$('#{{profesor.nif}}').toggle();"><i class="fas fa-angle-down"></i></button></td>
                                {% else %}
                                <td style="text-align: left;"><img src="{{ asset('img/data') }}/{{profesor.img}}.jpg" style="width: 32px;height: 32px;"> <button onclick="$('#{{profesor.nif}}').toggle();"><i class="fas fa-angle-down"></i></button></td>
                                {% endif %}
                        </tr>
                        <tr id="{{profesor.nif}}" style="display: none;" class="table-light">
                            <td colspan="3" class="text-left">Tlf: {{profesor.tlf}}<br>Mail: <a class="link" href="mailto:{{profesor.mail}}">{{profesor.mail}}</a></td>
                        </tr>
                    {% endfor %}
                    <tr class="table-info">
                        <td colspan="3">
                            <div style="width: 100%;">
                                <span style="margin:auto; display:table;">
                                    <form class="form-inline">
                                        <div>
                                            <button><i class="fas fa-angle-double-left"></i></button>
                                            <button><i class="fas fa-angle-left"></i></button>
                                            <input class="form-control" type="text" size="2" value="1">
                                            <button><i class="fas fa-angle-right"></i></button>
                                            <button><i class="fas fa-angle-double-right"></i></button>
                                        </div>
                                    </form>
                                    <button>Ir a pag <i class="far fa-arrow-alt-circle-right"></i></button>
                                </span>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </center>
{% endblock %}